@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "List of Vehicles";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 560px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        Lot Number:
                                        @item.LotNumber
                                       

                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.ProductPicURL" width="100%" alt="@item.LotNumber">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text"><b>Vehicle Category:</b>@item.VCategory</p>
                                <p class="card-text"><b>Discription: </b>@item.Discription</p>
                                <p class="card-text"><b>Year: </b>@item.Year</p>
                                <p class="card-text"><b>Make: </b>@item.Make</p>
                                <p class="card-text"><b>Model: </b>@item.Model</p>
                                <p class="card-text"><b>Start Bid Price: </b>@item.StartBidPrice</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    Staus Sample
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                   
                                    <a class="btn btn-success text-white" id="bidButton" style="width:60%">Place Bid</a>
                                    <span id="countdownTimer"></span>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        <script>
            var bidButton = document.getElementById("bidButton");
            var countdownTimer = document.getElementById("countdownTimer");
            var endTime = new Date("2023-05-20T19:27:59Z"); // Replace with your end time in UTC format

            function updateTimer() {
                var now = new Date();
                var timeLeft = endTime - now;

                if (timeLeft <= 0) {
                    bidButton.disabled = true;
                    countdownTimer.textContent = "Time's up!";
                    return;
                }

                var hours = Math.floor(timeLeft / (1000 * 60 * 60));
                var minutes = Math.floor((timeLeft / (1000 * 60)) % 60);
                var seconds = Math.floor((timeLeft / 1000) % 60);

                countdownTimer.textContent = "Time left: " + hours + "h " + minutes + "m " + seconds + "s";
            }

            setInterval(updateTimer, 1000);
        </script>
    }

</body>
</html>
